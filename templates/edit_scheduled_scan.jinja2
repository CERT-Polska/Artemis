{% extends "components/base.jinja2" %}
{% block main %}
  <h1>Edit Scheduled Scan</h1>
  <form action="/scheduled_scans/edit/{{ job_id }}" method="post">
    <input type="hidden" name="csrf_token" value="{{ csrf_token }}" />

    <div class="form-group">
      <label for="targets">Targets (one per line):</label>
      <textarea class="form-control" name="targets" id="targets" rows="5"></textarea>
    </div>

    <div class="form-group">
      <label for="tag">Tag:</label>
      <input type="text" class="form-control" name="tag" id="tag" />
    </div>

    <div class="form-group">
      <label for="disabled_modules">Disabled Modules (comma-separated):</label>
      <input type="text" class="form-control" name="disabled_modules" id="disabled_modules" />
    </div>

    <div class="form-group">
      <label for="priority">Priority:</label>
      <input type="text" class="form-control" name="priority" id="priority" />
    </div>

    <div class="form-group">
      <label for="schedule_interval_minutes">Interval (minutes):</label>
      <input type="number" class="form-control" name="schedule_interval_minutes" id="schedule_interval_minutes" min="1" value="1" />
    </div>

    <div class="form-group">
      <label for="schedule_start">Start Time (ISO format):</label>
      <input type="text" class="form-control" name="schedule_start" id="schedule_start" placeholder="YYYY-MM-DDTHH:MM:SS" />
    </div>

    <div class="form-group">
      <label for="schedule_end">End Time (ISO format):</label>
      <input type="text" class="form-control" name="schedule_end" id="schedule_end" placeholder="YYYY-MM-DDTHH:MM:SS" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
  </form>
{% endblock %}
