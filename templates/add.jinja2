{% extends "components/base.jinja2" %}
{% block main %}
    <h1>Add targets</h1>
    <form action="/add" method="post" class="w-100">
        <div class="form-group">
            <label class="form-text">Tag</label>
            <input type="text" class="form-control" name="tag" required />
        </div>
        <div class="form-group">
            <label class="form-text">Targets (separated with newlines)</label>
            <textarea class="form-control" name="targets"></textarea>
        </div>
        <div class="form-group">
            <label class="form-text">Batch file (should contain one target per line)</label>
            <input class="form-control btn" type="file" name="file">
        </div>
        <input type="submit" class="btn btn-primary" value="Start scan">
    </form>
{% endblock %}
