{% extends "components/base.jinja2" %}
{% block main %}
<div class="bs-component" style="padding-top: 100px">
  <h3 class="text-center">task {{ task._id }}</h3>

  {% if task.status_reason %}
      <div class="alert alert-primary">
          {{ task.status_reason }}
      </div>
  {% endif %}

  {% if task.decision %}
      <h4>Decision</h4>
      {% if task.decision.decision_type == 'approved' %}
        <span class="badge bg-primary">approved</span>
      {% else %}
        <span class="badge bg-secondary">dismissed</span>
      {% endif %}

      (comment={{ task.decision.operator_comment }})
  {% else %}
      <h4>Decide</h4>
      <form action="/add-decision" method="post" class="mb-4">
          <div class="form-group">
              <label class="form-text">Decision</label>
              <select class="form-select" name="decision_type">
                  <option value="approved">Approved</option>
                  <option value="dismissed">Dismissed</option>
              </select>
          </div>
          <div class="form-group">
              <label class="form-text">Scope</label>
              <select class="form-select" name="target_string">
                  <option value="{{ task.target_string }}">Mark only for this target</option>
                  <option value="">Mark all findings with this message</option>
              </select>
          </div>
          <div class="form-group mb-2">
              <label class="form-text">Comment</label>
              <textarea class="form-control" name="operator_comment"></textarea>
          </div>
          <input type="hidden" name="message" value="{{ task.status_reason }}" />
          <input type="hidden" name="redirect_to" value="{{ referer }}" />
          <input type="submit" class="btn btn-primary" value="Decide">
      </form>
  {% endif %}

  <h4>Result</h4>
  <pre><code>{{ pretty_printed }}</code></pre>

  <h4>Metadata</h4>
  <dl class="row">
    <dt class="col-3">UID</dt>
    <dd class="col-9">{{task._id}}</dd>
    <dt class="col-3">Priority</dt>
    <dd class="col-9">
        <span class="badge bg-dark">{{task.priority}}</span>
    </dd>

    {% if task.parent_uid %}
        <dt class="col-3">Parent UID</dt>
        <dd class="col-9">
            <a href="/task/{{task.parent_uid}}">{{task.parent_uid}}</a>
        </dd>
    {% endif %}

    <dt class="col-3">Analysis</dt>
    <dd class="col-9">
      <a href="/analysis/{{task.root_uid}}">{{task.root_uid}}</a>
    </dd>

    <dt class="col-3">Origin</dt>
    <dd class="col-9">
      <a href="/live/queue/{{task['headers']['origin']}}">{{task['headers']['origin']}}</a>
    </dd>

    <dt class="col-3">Receiver</dt>
    <dd class="col-9">
      <a href="/live/queue/{{task['headers']['receiver']}}">{{task['headers']['receiver']}}</a>
    </dd>

    <dt class="col-3">Headers</dt>
    <dd class="col-9">
      {% for hdrname, hdrval in task['headers'].items() %}
      {% if hdrname == 'type' %}
      <span class="badge bg-primary">{{hdrname}}:{{hdrval}}</span>
      {% elif hdrname == 'kind' %}
      <span class="badge bg-info">{{hdrname}}:{{hdrval}}</span>
      {% elif hdrname == 'stage' %}
      <span class="badge bg-success">{{hdrname}}:{{hdrval}}</span>
      {% elif hdrname == 'receiver' %}
      {% else %}
      <span class="badge bg-secondary">{{hdrname}}:{{hdrval}}</span>
      {% endif %}
      {% endfor %}
    </dd>
  </dl>

</div>
{% endblock %}
