{% macro report_meta(report) %}
    {% if report.is_subsequent_reminder %}
        <p>
            {% trans %}This problem has already been reported in previous notifications.{% endtrans %}
        </p>
    {% endif %}
    {% if report.target_is_ip_address__as_property and report.last_domain %}
        <p>
            {% trans %}At the moment of the scanning, this was the IP address of {% endtrans %} {{ report.last_domain }}
        </p>
    {% endif %}
{% endmacro %}

